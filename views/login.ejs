    font-weight: 600;
}
.data-point {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 0;
    border-bottom: 1px dashed #eee;
    color: var(--text-dark);
    font-size: 1rem;
}
.data-point:last-of-type {
    border-bottom: none;
}
.data-point span:first-child {
    font-weight: 500;
    color: var(--text-light);
}
.data-point span:last-child {
    font-weight: 600;
    color: var(--text-dark);
}

/* Specific styling for the fertilizer tip */
.data-point strong#res-fertilizer {
    color: var(--dark-green);
    font-size: 1.05rem;
    flex-grow: 1;
    text-align: right;
    padding-left: 10px;
}

/* Styling for recommendation and alert paragraphs */
#res-recommendation,
#res-alert {
    color: var(--text-dark);
    font-size: 1.05rem;
    line-height: 1.5;
    margin-top: 10px;
}
#risk-card {
    background-color: #fff8e1;
    border: 1px solid #ffecb3;
}
#risk-card .card-header .icon {
    background-color: #ffecb3;
}
#risk-card .card-header h3 {
    color: #e65100;
}
#risk-card p#res-alert {
    color: #e65100;
    font-weight: 500;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .navbar {
        padding: 12px 15px; /* Reduce padding for smaller screens */
    }
    .nav-links {
        gap: 8px; /* Reduce gap between nav links */
    }
    .nav-links a {
        padding: 4px 8px; /* Smaller padding for links */
        font-size: 0.9rem; /* Smaller font size for links */
    }
    .nav-links .login-btn {
        padding: 6px 12px; /* Smaller padding for buttons */
        font-size: 0.85rem; /* Smaller font size for buttons */
    }
    .hero h2 {
        font-size: 1.7rem; /* Adjust heading size */
    }
    .hero p {
        font-size: 1rem; /* Adjust paragraph size */
    }
    .pincode-section {
        flex-direction: column; /* Stack input and button vertically */
        padding: 20px; /* Adjust padding */
        gap: 15px; /* Increase gap for stacked elements */
    }
    .pincode-section input {
        width: 100%; /* Full width for input */
        max-width: 280px; /* Limit max width */
        text-align: center; /* Center placeholder text */
    }
    .pincode-section button {
        width: 100%; /* Full width for button */
        max-width: 280px; /* Limit max width */
    }
    .market-prices {
        margin: 30px 20px;
        padding: 20px;
    }
    .market-prices h3 {
        font-size: 1.5rem; /* Adjust heading size */
    }
    .data-results-container {
        grid-template-columns: 1fr;
        margin: 30px 20px;
        gap: 20px;
    }
    .price-ticker {
        gap: 15px;
    }
    .price-item {
        padding: 15px 20px;
        min-width: unset;
        width: calc(50% - 10px);
    }
    .result-card {
        padding: 20px; /* Adjust card padding */
    }
    .result-card .card-header h3 {
        font-size: 1.2rem; /* Adjust card header heading size */
    }
    .data-point {
        font-size: 0.95rem; /* Adjust data point font size */
    }
    .data-point strong#res-fertilizer,
    #res-recommendation,
    #res-alert {
        font-size: 0.95rem; /* Adjust text sizes */
    }
}

@media (max-width: 480px) {
    .navbar {
        flex-direction: column; /* Stack logo and nav links */
        align-items: flex-start; /* Align items to the start */
        padding: 15px;
    }
    .navbar h1 {
        margin-bottom: 10px; /* Space between logo and links */
    }
    .nav-links {
        flex-direction: column; /* Stack nav links vertically */
        align-items: flex-start; /* Align links to the left */
        width: 100%;
        gap: 10px;
    }
    .nav-links a,
    .nav-links .login-btn {
        width: calc(100% - 20px); /* Full width for links/buttons within padding */
        text-align: center; /* Center text in buttons/links */
        padding: 10px 0; /* More vertical padding */
    }
    .hero {
        padding: 30px 15px;
    }
    .hero h2 {
        font-size: 1.5rem;
    }
    .hero p {
        font-size: 0.9rem;
    }
    .pincode-section {
        padding: 15px;
        margin: 20px 15px; /* Adjust margin */
        width: calc(100% - 30px); /* Full width minus padding */
        box-sizing: border-box; /* Include padding in width */
    }
    .market-prices {
        margin: 20px 15px;
        padding: 15px;
    }
    .price-item {
        width: 100%; /* Make each price item take full width */
    }
    .data-results-container {
        margin: 20px 15px;
        padding: 0;
    }
    .result-card {
        padding: 15px;
    }
    .result-card .card-header .icon {
        font-size: 1.5rem; /* Smaller icon size */
        width: 35px;
        height: 35px;
    }
    .result-card .card-header h3 {
        font-size: 1.1rem;
    }
}
