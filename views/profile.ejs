<body>

  <!-- Navbar -->
  <div class="navbar">
    <h1>AXIA</h1>
    <div class="nav-links">
      <a href="/crop-recommender">Crop Recommender</a>
      <a href="/weather-forecast">Weather Forecast</a>
      <a href="/profile">Profile</a>
      <% if (user) { %>
        <form action="/logout" method="POST" style="margin:0;">
            <button type="submit" class="btn logout-btn">Logout</button>
        </form>
      <% } else { %>
        <a href="/login" class="btn">Login</a>
        <a href="/register" class="btn" style="background-color: #5cb85c;">Register</a>
      <% } %>
    </div>
  </div>

  <div class="profile-container">
    <h2>Welcome, <%= user ? user.username : 'Guest' %>!</h2>

    <% if (messages.error) { %>
        <div class="message error">
            <%= messages.error %>
        </div>
    <% } %>

    <% if (user) { %>
        <div class="profile-section">
            <h3>Personal Information</h3>
            <div class="profile-info">
                <div class="info-item">
                    <label>Username:</label>
                    <span><%= user.username %></span>
                </div>
                <div class="info-item">
                    <label>Email:</label>
                    <span><%= user.email %></span>
                </div>
                <div class="info-item">
                    <label>Phone Number:</label>
                    <span><%= user.phone || '' %></span>
                </div>
            </div>
        </div>

        <div class="profile-section">
            <h3>Farm Information</h3>
            <div class="profile-info">
                <div class="info-item">
                    <label>Farm Area (acres):</label>
                    <span><%= user.farmArea || '' %></span>
                </div>
                <div class="info-item">
                    <label>Pincode:</label>
                    <span><%= user.pincode || '' %></span>
                </div>
            </div>
        </div>

        <div class="profile-section">
            <h3>Previous Crop History</h3>
            <% if (user.cropHistory && user.cropHistory.length > 0) { %>
                <ul class="crop-history-list">
                    <% user.cropHistory.forEach(crop => { %>
                        <li>
                            <span><strong><%= crop.year %>:</strong> <%= crop.name %> (<%= crop.yield %>)</span>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No previous crop history recorded.</p>
            <% } %>
        </div>

    <% } else { %>
        <p class="message error">You need to be logged in to view your profile. Please <a href="/login">login</a>.</p>
    <% } %>

  </div>

</body>
